<configuration>
  <system.webServer>

    <staticContent>
 -    <mimeMap fileExtension=".tag" mimeType="text/html" />
 -    <mimeMap fileExtension=".json" mimeType="application/json" />
 -  </staticContent>

	  <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <rule name="api">
          <match url="api/*" />
          <action type="Rewrite" url="api/server.js" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>